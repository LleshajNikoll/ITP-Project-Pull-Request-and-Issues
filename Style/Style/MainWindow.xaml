<Window x:Class="Style.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Style"
        mc:Ignorable="d"
        Title="ToDo Liste" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F0F0F0">
        <StackPanel Margin="20">
            <TextBlock Text="ToDo Liste" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <ListBox Name="TodoList" Height="200" Margin="0,10,0,10" Background="White" BorderBrush="#ddd" BorderThickness="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="{Binding}" FontSize="16" VerticalAlignment="Center"/>
                            <Button Content="Delete" Width="100" Margin="10,0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="DeleteTodo" Style="{StaticResource ButtonStyle}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="TodoInput" Width="200" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <Button Content="Hinzufügen" Click="AddTodo" Style="{StaticResource ButtonStyle}" Width="115"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
