<Window x:Class="Style.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Style"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="ToDo Liste" FontSize="20" FontWeight="Bold"/>
            <ListBox Name="TodoList" Height="200" Margin="0,10,0,10"/>
            <TextBox Name="TodoInput" Width="200" Margin="0,0,10,0"/>
            <Button Content="Hinzufügen" Width="100" Click="AddTodo"/>
        </StackPanel>
    </Grid>
</Window>
